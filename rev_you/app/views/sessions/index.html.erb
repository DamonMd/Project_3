
<div class="container">
  <%= video_tag(["stockholm.mp4"], autoplay: true, muted: true, loop: true) %>
  <div id="start">Click here to begin your journey</div>
</div>

<div class="welcome">
  <p>Welcome to <strong>RevYou</strong></p>
  <p>A website that displays reviews from people like you</p>
  <p>Sign in to Facebook or Twitter for a more personal search</p>
  <p>Or just click below to get started</p>
</div>

<div class = "search-field" style="display: none">
  <form action="/search" method="post">
    <label for='term'>Activity</label>
    <input class="input" name="term" placeholder='Restaurant, Hotel, Event,etc'>
    <label for='location'>Location</label>
    <input class="input" name="location" placeholder='City'>
    <input type="submit" value="Find">
  </form>
</div>

<div class="login">
  <% if current_user %>
    <p>Welcome   <%= current_user.name %></p>
    <img src="<%=current_user.image%>">
    <a href='/logout'>Log Out</a>
  <% else %>
    <%= link_to image_tag("Facebook-t.png"), "/auth/facebook" %>
    <%= link_to image_tag("Twitter-Bird-2.png"), "/auth/twitter" %>
  <% end %>
</div>

<script>

  window.fbAsyncInit = function() {
    FB.init({
      appId      : '854213751281806',
      xfbml      : true,
      version    : 'v2.3'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));

var click = document.querySelector("#start")
click.addEventListener('click', function(){
  var search = document.querySelector(".search-field")
  search.style.display = 'block'
  var start = document.querySelector("#start")
  start.style.display = 'none'
})
</script>

